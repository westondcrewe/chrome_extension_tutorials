{
    "manifest_version": 3,
    "name": "Pomodoro Timer",
    "version": "1.0",
    "description": "An extension that embeds a timer within the Chrome browser to give users ready access to the Pomodoro work/study technique",
    "permissions": [
        "alarms",
        "notifications"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/timer-16.png",
            "48": "images/timer-48.png",
            "128": "images/timer-128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16":"images/timer-16.png",
        "48":"images/timer-48.png",
        "128":"images/timer-128.png"
    }
}